{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}